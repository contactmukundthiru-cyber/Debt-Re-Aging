# Credit Report Analyzer - Environment Configuration
# Copy this file to .env.local and customize as needed

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Node environment (development, production, test)
NODE_ENV=development

# Application URL (used for metadata and PWA manifest)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Base path when deployed under a subpath (e.g. GitHub Pages: /RepoName/pwa-app)
# Leave unset for Vercel/root deployment. Set in CI: NEXT_PUBLIC_BASE_PATH=/${GITHUB_REPOSITORY#*/}/pwa-app
# NEXT_PUBLIC_BASE_PATH=

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable OCR functionality (requires tesseract.js - adds ~5MB to bundle)
NEXT_PUBLIC_ENABLE_OCR=true

# Enable PDF parsing functionality
NEXT_PUBLIC_ENABLE_PDF=true

# Enable development debugging tools
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Encryption key for localStorage (should be unique per deployment)
# IMPORTANT: Change this value for production deployments!
# Generate a secure key: openssl rand -base64 32
NEXT_PUBLIC_ENCRYPTION_KEY=change-me-in-production

# Maximum file size for uploads (in bytes, default: 10MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Rate limit: max requests per minute
NEXT_PUBLIC_RATE_LIMIT=60

# ============================================================================
# ANALYTICS (Optional - all disabled by default for privacy)
# ============================================================================

# Error tracking (e.g., Sentry DSN)
# NEXT_PUBLIC_SENTRY_DSN=

# Analytics (disabled by default for privacy)
# NEXT_PUBLIC_ANALYTICS_ID=

# ============================================================================
# OPTIONAL REMOTE AI EXTENSION (BYO KEY)
# ============================================================================

# Default endpoint for remote AI analysis (OpenAI-compatible).
# Leave blank to require manual entry in the UI.
# NEXT_PUBLIC_AI_REMOTE_ENDPOINT=https://api.openai.com/v1/chat/completions

# Default model for remote AI analysis.
# NEXT_PUBLIC_AI_REMOTE_MODEL=gpt-4o-mini

# Optional: provide a key for single-tenant deployments.
# For public or shared deployments, leave blank and let users paste their own key.
# NEXT_PUBLIC_AI_REMOTE_API_KEY=

# Include parsed fields in the remote AI payload (false by default).
# NEXT_PUBLIC_AI_REMOTE_INCLUDE_FIELDS=false

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARN, ERROR
NEXT_PUBLIC_LOG_LEVEL=INFO

# Maximum log buffer size
NEXT_PUBLIC_MAX_LOG_ENTRIES=100

# ============================================================================
# LOCALIZATION
# ============================================================================

# Default language (en, es, fr, de, zh, ja, ko, pt, ar, hi)
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# ============================================================================
# NOTES FOR DEPLOYMENT
# ============================================================================
#
# 1. For Vercel: Add these variables in Project Settings > Environment Variables
# 2. For Docker: Pass as --env-file .env.local or -e flags
# 3. For static hosting: Build with these variables set
#
# Security checklist:
# - [ ] Changed NEXT_PUBLIC_ENCRYPTION_KEY from default
# - [ ] Set appropriate rate limits
# - [ ] Disabled debug mode for production
# - [ ] Reviewed CSP headers in vercel.json
